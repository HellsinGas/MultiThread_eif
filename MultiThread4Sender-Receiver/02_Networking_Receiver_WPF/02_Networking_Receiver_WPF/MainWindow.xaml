<Window x:Class="_02_Networking_Receiver_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Networking_Receiver_WPF"
        mc:Ignorable="d"
        Title="Receiver" Height="450" Width="800">
    <Grid>
        <Button Content="Start receiver" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="118" Height="31" Click="StartButton_Click"/>
        <Label Content="Not running" x:Name="statusLabel" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="405"/>
        <Button Content="Stop receiver" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" Width="134" Height="29" Click="StopButton_Click"/>

    </Grid>
</Window>
